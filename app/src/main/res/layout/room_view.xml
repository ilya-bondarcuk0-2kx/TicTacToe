<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_room_view"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/roomViewPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/room_view_panel" />

    <TextView
        android:id="@+id/roomName"
        android:layout_width="253dp"
        android:layout_height="37dp"
        android:gravity="start|center"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/roomViewPanel"
        app:layout_constraintEnd_toEndOf="@id/roomViewPanel"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="@id/roomViewPanel"
        app:layout_constraintTop_toTopOf="@id/roomViewPanel" />

    <TextView
        android:id="@+id/connCount"
        android:layout_width="81dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/roomViewPanel"
        app:layout_constraintEnd_toEndOf="@id/roomViewPanel"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="@id/roomViewPanel"
        app:layout_constraintTop_toTopOf="@id/roomViewPanel"
        app:layout_constraintVertical_bias="0.521" />
</androidx.constraintlayout.widget.ConstraintLayout>
